<style>
  .container-fluid {
    padding: 0 7rem !important;
    /* display: flex !important;
    justify-content: space-between !important;
    width: 100vw !important; */
  }

  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }
  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
  }

  .search-inp {
    border-radius: 25px;
    padding: 0 1rem;
    padding: 0.5rem 3rem 0.5rem 3rem;
  }

  .nav-link {
    margin-left: 1rem;
    border-radius: 25px;
    font-size: 0.9rem;
  }

  .nav-link:hover {
    color: #fff !important;
    background-color: #fe424d;
  }

  .addListing {
    font-size: 1rem;
    font-weight: 600;
    padding-left: 10px !important;
    padding-right: 10px !important;
    border: 1px dotted gray;
  }

  .addListing:hover {
    color: #fff !important;
    background-color: #fe424d;
  }

  .user {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin-left: 1rem;
  }

  .user i {
    margin-right: 0.5rem;
    font-size: 30px;
  }

  /* .collapse {
    width: 100vw !important;
    background-color: white !important;
  } */
  /* media queries */
  @media (max-width: 758px) {
    .container-fluid {
      padding-left: 2rem !important;
      padding-right: 2rem !important;
    }
  }

  @media (max-width: 991px) {
    .collapse {
      padding: 1.5rem 0;
    }
  }
</style>

<nav class="navbar navbar-expand-lg bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <div>
      <a class="navbar-brand" href="/listings"
        ><i class="fa-brands fa-airbnb"></i>
        <h4><b>airbnb</b></h4>
      </a>
    </div>

    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse bg-white" id="navbarNavAltMarkup">
      <div class="navbar-nav ms-auto">
        <form class="d-flex" method="GET" action="/listings/search">
          <input
            class="form-control me-2 search-inp"
            type="search"
            name="search"
            role="search"
            placeholder="Search destinations"
          />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-search"></i>Search
          </button>
        </form>
      </div>
      <div class="navbar-nav ms-auto">
        <a class="nav-link addListing" href="/listings/new">Airbnb your home</a>
        <% if(!currUser) {%>
        <a class="nav-link" href="/signup"><b>Sign Up</b></a>
        <a class="nav-link" href="/login"><b>Log In</b></a>
        <% } %> <% if(currUser) {%>
        <a class="nav-link" href="/logout"><b>Log Out</b></a>
        <div class="user" style="background-color: #fff">
          <i class="fa-solid fa-circle-user" style="color: #fe424d"></i>
          <b><%= currUser.username %></b>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</nav>
