<%- layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-5 offset-3">
    <h2 class="offset-5">Log In</h2>
    <form action="/login" method="POST" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="username" id="username" class="form-label">Username</label>
        <input name="username" type="text" class="form-control" required />
      </div>

      <div class="mb-4">
        <label for="password" id="password" class="form-label">Password</label>
        <input name="password" type="password" class="form-control" required />
      </div>
      <button class="btn btn-success col-12">Continue</button>
    </form>
  </div>
</div>
